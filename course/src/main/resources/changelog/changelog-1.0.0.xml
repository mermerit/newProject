<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
 ">

    <changeSet author="mera" id="change_1">
        <createTable tableName="user_with_course">
            <column autoIncrement="true" name="id" type="integer">
                <constraints primaryKey="true" primaryKeyName="usersPK"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet author="mera" id="change_2">
        <createTable tableName="course_list">
            <column autoIncrement="true" name="course_id" type="INTEGER">
                <constraints primaryKey="true" primaryKeyName="coursePK"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="price" type="float"/>
        </createTable>
    </changeSet>
    <changeSet author="mera" id="change_3">
        <createTable tableName="user_course_table">
            <column name="id" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="course_id" type="integer">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="mera" id="change_4">
        <addPrimaryKey columnNames="id, course_id" tableName="user_course_table"/>
    </changeSet>

    <changeSet author="mera" id="change_5">
        <addForeignKeyConstraint baseColumnNames="id" baseTableName="user_course_table"
                                 constraintName="FK_apcc8lxk2xnug8377fatvbn04" deferrable="false"
                                 initiallyDeferred="false" referencedColumnNames="id" referencedTableName="user_with_course"/>
    </changeSet>
    <changeSet author="mera" id="change_6">
        <addForeignKeyConstraint baseColumnNames="course_id" baseTableName="user_course_table"
                                 constraintName="FK_it77eq964jhfqtu54081ebtio" deferrable="false"
                                 initiallyDeferred="false" referencedColumnNames="course_id" referencedTableName="course_list"/>
    </changeSet>







</databaseChangeLog>